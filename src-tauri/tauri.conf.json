{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude",
  "version": "0.1.0",
  "identifier": "com.claude.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Claude",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "url": "https://claude.ai"
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "claude.ai",
          "windows": ["main"],
          "enableTauriAPI": false
        }
      ]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ]
  }
}
